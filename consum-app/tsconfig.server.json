{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "src/server.ts",
    "src/routes/**/*",
    "src/lib/supabase.server.ts",
    "src/lib/gemini.ts",
    "src/lib/transcript.ts",
    "src/lib/aiErrors.ts",
    "src/lib/blueprintParser.ts",
    "src/lib/geminiProcessor.ts",
    "src/lib/rateLimiter.ts",
    "src/lib/auth/**/*.ts",
    "src/lib/email/**/*.ts",
    "src/plugins/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/main.tsx",
    "src/App.tsx",
    "src/lib/supabase.ts",
    "src/components/**/*",
    "src/pages/**/*",
    "src/hooks/**/*",
    "src/contexts/**/*",
    "src/styles/**/*"
  ]
}
